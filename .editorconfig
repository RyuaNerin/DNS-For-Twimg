; Top-most http://editorconfig.org/ file
root = true

[*]
end_of_line = lf
charset = utf-8
indent_style = tab
indent_size = 4
insert_final_newline = true

[*.go]
indent_style = tab
indent_size = 4

[*.json]
indent_style = space
indent_size = 2

[*.md]
indent_style = space
indent_size = 4

[*.js.tmpl]
indent_style = space
indent_size = 2
